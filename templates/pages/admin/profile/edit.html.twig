{% extends "themes/base_admin.html.twig" %}

{% block title %}Modification du profil{% endblock %}

{% block description %}Modification du profil{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification du profil</h1>

    <div class="container my-3">
        <div class="row">
            <div class="col-md-9 col-lg-7 mx-auto p-4 bg-white shadow">
                {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                                <label for="edit_profile_form_firstName">Pr√©nom</label>
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                                <label for="edit_profile_form_lastName">Nom</label>
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="text-danger">{{ form_errors(form.email) }}</div>
                                <label for="edit_profile_form_email">Email</label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="text-danger">{{ form_errors(form.password.first) }}</div>
                                <label for="edit_profile_form_password_first">Mot de passe</label>
                                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="edit_profile_form_password_second">Confirmation du mot de passe</label>
                                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <input type="submit" class="btn btn-primary" value="Modifier" formnovalidate />
                            </div>
                        </div>
                    </div>
                    

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}