{% extends "themes/base_visitor.html.twig" %}

{% block title %}Contact {% endblock %}

{% block description %} Page de Contact {% endblock %}

{% block main %}
<h1 class="text-center my-3 display-5"> Contactez-moi </h1>
{% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
{% endfor %}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                        <label for="contact_firstName">Prénom</label>
                            {{ form_widget(form.firstName, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                        <label for="contact_lastName">Nom</label>
                            {{ form_widget(form.lastName, {'attr' : {'class' : 'form-control'}}) }}

                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="text-danger">{{ form_errors(form.email) }}</div>
                        <label for="contact_email">Email</label>
                            {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                    <div class="col-md-6">
                        <div class="text-danger">{{ form_errors(form.tel) }}</div>
                        <label for="contact_tel">Téléphone</label>
                            {{ form_widget(form.tel, {'attr' : {'class' : 'form-control'}}) }}
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="text-danger">{{ form_errors(form.message) }}</div>
                        <label for="contact_message">Message</label>
                            {{ form_widget(form.message, {'attr' : {'class' : 'form-control', 'rows': 8 }}) }}
                    </div>
                </div>

                <div class="mt-3 text-center">
                     <input formnovalidate type="submit" class="btn btn-primary" value="envoyer">
                </div>
            {{ form_end(form) }}
        </div>
            <div class="col-md-3 text-center">
                <img src="{{ asset('images/static/visitor/contact/contact2.svg')}}" alt="contact1" class="img-fluid">
            </div>
    </div>

</div>
{% endblock %}