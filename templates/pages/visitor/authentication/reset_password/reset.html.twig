{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Nouveau mot de passe</h1>

    <div class="container my-3">
        <div class="row">
            <div class="col-md-9 col-lg-7 mx-auto p-4 bg-white shadow">
                {{ form_start(resetForm) }}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="text-danger">{{ form_errors(resetForm.plainPassword.first) }}</div>
                                <label for="registration_form_password_first">Mot de passe</label>
                                {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="registration_form_password_second">Confirmation du mot de passe</label>
                                {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" value="Envoyer" />
                        </div>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
